# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Environment
NODE_ENV="production"

# Database Configuration
# Main connection URL (with connection pooling for Prisma)
DATABASE_URL="postgresql://username:password@host:5432/database_name?pgbouncer=true&connection_limit=10"
# Direct URL for migrations (without connection pooling)
DIRECT_URL="postgresql://username:password@host:5432/database_name"

# Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secure-random-string-here-32-characters-minimum"
NEXTAUTH_URL="https://superbear.blog"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="superbear-production"
CLOUDINARY_API_KEY="your-production-api-key"
CLOUDINARY_API_SECRET="your-production-api-secret"

# Error Tracking & Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ENVIRONMENT="production"
SENTRY_TRACES_SAMPLE_RATE="0.1"
SENTRY_PROFILES_SAMPLE_RATE="0.1"

# Analytics & Performance Monitoring
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
VERCEL_SPEED_INSIGHTS_ID="your-speed-insights-id"

# Monitoring & Health Checks
UPTIME_ROBOT_API_KEY="your-uptime-robot-api-key"
HEALTH_CHECK_SECRET="your-health-check-secret"

# Security Configuration
ENABLE_SECURITY_HEADERS="true"
ENABLE_CSP="true"
ENABLE_RATE_LIMITING="true"
CSRF_SECRET="your-csrf-secret-32-characters-minimum"

# Performance & Optimization
ANALYZE_BUNDLE="false"
ENABLE_COMPRESSION="true"
ENABLE_STATIC_OPTIMIZATION="true"

# Logging Configuration
LOG_LEVEL="error"
ENABLE_ACCESS_LOGS="true"
LOG_RETENTION_DAYS="30"

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS="true"

# Cache Configuration
CACHE_TTL="3600"
STATIC_CACHE_TTL="31536000"
CDN_CACHE_TTL="86400"

# Feature Flags
ENABLE_DEBUG_MODE="false"
ENABLE_MAINTENANCE_MODE="false"
ENABLE_BETA_FEATURES="false"

# QA Testing Overlay (should be off in production)
QA_OVERLAY="off"

# Email Configuration (Production)
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="apikey"
SMTP_PASSWORD="your-sendgrid-api-key"
SMTP_FROM="SuperBear Blog <noreply@superbear.blog>"

# Campaign Scheduler
CRON_SECRET="your-cron-secret-for-scheduled-campaigns"
ENABLE_CAMPAIGN_SCHEDULER="true"

# Email Queue & Delivery
REDIS_URL="redis://localhost:6379"
EMAIL_BATCH_SIZE="50"
EMAIL_SEND_THROTTLE_MS="100"
EMAIL_MAX_ATTEMPTS="3"

# Domain Throttling (emails per minute)
GMAIL_THROTTLE_LIMIT="40"
OUTLOOK_THROTTLE_LIMIT="15"
YAHOO_THROTTLE_LIMIT="20"
DEFAULT_THROTTLE_LIMIT="30"

# Webhook Security
EMAIL_WEBHOOK_SECRET="your-webhook-secret-for-email-providers"
WEBHOOK_SECRET="your-general-webhook-secret"

# Suppression & Compliance
ENABLE_SUPPRESSION_LIST="true"
SOFT_BOUNCE_CLEANUP_DAYS="30"
ENABLE_QUIET_HOURS="true"
DEFAULT_QUIET_HOURS_START="21"
DEFAULT_QUIET_HOURS_END="8"
DEFAULT_TIMEZONE="Asia/Bangkok"

# External Services
WEBHOOK_SECRET="your-webhook-secret"
API_RATE_LIMIT="1000"

# Backup & Recovery
BACKUP_RETENTION_DAYS="30"
ENABLE_AUTOMATED_BACKUPS="true"