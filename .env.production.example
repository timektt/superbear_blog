# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Environment
NODE_ENV="production"

# Database Configuration
# Main connection URL (with connection pooling for Prisma)
DATABASE_URL="postgresql://username:password@host:5432/database_name?pgbouncer=true&connection_limit=1"
# Direct URL for migrations (without connection pooling)
DIRECT_URL="postgresql://username:password@host:5432/database_name"

# Authentication
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secure-random-string-here-32-characters-minimum"
NEXTAUTH_URL="https://your-production-domain.com"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Optional: Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# Optional: Analytics
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Optional: Monitoring
UPTIME_ROBOT_API_KEY="your-uptime-robot-api-key"

# Security
# Enable strict security headers
ENABLE_SECURITY_HEADERS="true"

# Performance
# Enable bundle analysis in production builds
ANALYZE_BUNDLE="false"

# Logging
# Set log level for production
LOG_LEVEL="error"

# Rate Limiting (if implemented)
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Cache Configuration
CACHE_TTL="3600"
STATIC_CACHE_TTL="31536000"