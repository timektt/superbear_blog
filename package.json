{
  "name": "superbear_blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:init": "node scripts/init-db.js",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:prod": "prisma migrate deploy && prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:production": "playwright test src/tests/e2e --grep @production",
    "test:smoke": "playwright test src/tests/smoke",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "build:analyze": "ANALYZE=true npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "build:standalone": "NODE_ENV=production npm run build && npm run db:generate",
    "postbuild": "npm run db:generate",
    "start:prod": "bash scripts/production-start.sh",
    "start:prod:windows": "powershell -ExecutionPolicy Bypass -File scripts/production-start.ps1",
    "deploy:vercel": "vercel --prod",
    "deploy:check": "npm run type-check && npm run lint && npm run test && npm run build:prod",
    "deploy:validate": "powershell -ExecutionPolicy Bypass -File scripts/pre-deployment-check.ps1",
    "deploy:docker": "docker-compose -f docker-compose.production.yml up -d",
    "deploy:docker:build": "docker-compose -f docker-compose.production.yml up --build -d",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "logs:prod": "vercel logs --follow",
    "monitor:metrics": "node -e \"fetch('http://localhost:3000/api/health').then(r=>r.json()).then(console.log)\"",
    "campaigns:test": "node scripts/test-campaigns.js",
    "campaigns:scheduler": "node -e \"fetch('http://localhost:3000/api/admin/campaigns/scheduler', {method: 'POST'}).then(r=>r.json()).then(console.log)\"",
    "campaigns:cron": "node -e \"fetch('http://localhost:3000/api/cron/campaigns', {method: 'POST', headers: {'Authorization': 'Bearer ' + (process.env.CRON_SECRET || 'dev-secret')}}).then(r=>r.json()).then(console.log)\"",
    "campaigns:queue": "node -e \"fetch('http://localhost:3000/api/admin/campaigns/queue').then(r=>r.json()).then(console.log)\"",
    "campaigns:process-queue": "node -e \"fetch('http://localhost:3000/api/admin/campaigns/queue/process', {method: 'POST'}).then(r=>r.json()).then(console.log)\"",
    "suppressions:stats": "node -e \"fetch('http://localhost:3000/api/admin/suppressions').then(r=>r.json()).then(console.log)\"",
    "suppressions:export": "node -e \"fetch('http://localhost:3000/api/admin/suppressions?action=export').then(r=>r.json()).then(console.log)\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.13.0",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tiptap/extension-code-block-lowlight": "^3.0.9",
    "@tiptap/extension-image": "^3.0.9",
    "@tiptap/extension-link": "^3.0.9",
    "@tiptap/extension-placeholder": "^3.0.9",
    "@tiptap/pm": "^3.0.9",
    "@tiptap/react": "^3.0.9",
    "@tiptap/starter-kit": "^3.0.9",
    "@types/handlebars": "^4.1.0",
    "@types/nodemailer": "^7.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "cookies-next": "^6.1.0",
    "dotenv": "^17.2.1",
    "handlebars": "^4.7.8",
    "juice": "^11.0.1",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.536.0",
    "next": "15.4.5",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.10.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.5",
    "@playwright/test": "^1.54.2",
    "@sentry/nextjs": "^10.5.0",
    "@sentry/webpack-plugin": "^4.1.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5"
  }
}
