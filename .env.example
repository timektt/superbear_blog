# Database (PostgreSQL for production, SQLite for local development)
# Local development (SQLite):
# DATABASE_URL="file:./prisma/dev.db"

# Production (PostgreSQL with connection pooling):
DATABASE_URL="postgresql://username:password@localhost:5432/superbear_blog?pgbouncer=true&connection_limit=1"
# Direct URL for migrations (without connection pooling):
DIRECT_URL="postgresql://username:password@localhost:5432/superbear_blog"

# Production environment
NODE_ENV="production"

# NextAuth (for authentication)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Cloudinary (for image uploads and media management)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Media Management System Configuration
# Maximum file size for uploads (in bytes, default: 10MB)
MAX_UPLOAD_SIZE="10485760"
# Supported image formats (comma-separated)
SUPPORTED_IMAGE_FORMATS="image/jpeg,image/png,image/gif,image/webp,image/svg+xml"
# Default folder for uploads
DEFAULT_UPLOAD_FOLDER="uploads"
# Enable automatic cleanup of orphaned files
ENABLE_AUTO_CLEANUP="true"
# Cleanup schedule (cron expression, default: weekly on Sunday at 2 AM)
CLEANUP_SCHEDULE="0 2 * * 0"
# Days to wait before cleaning up orphaned files
CLEANUP_ORPHAN_DAYS="30"
# Enable media security scanning
ENABLE_MEDIA_SECURITY="true"
# Enable debug logging for media operations
DEBUG_MEDIA="false"

# Layout Configuration
# Options: 'magazine' | 'classic' (default: 'classic')
NEXT_PUBLIC_LAYOUT="classic"

# Development overlay controls (default: disabled)
NEXT_PUBLIC_ENABLE_DEV_OVERLAYS="0"

# Redis (for caching and session storage)
REDIS_URL="redis://localhost:6379"

# Rate Limiting Configuration
ENABLE_RATE_LIMITING="true"
# Upload rate limit (requests per minute per user)
UPLOAD_RATE_LIMIT="10"
# Media API rate limit (requests per minute per user)
MEDIA_API_RATE_LIMIT="100"
# Cleanup rate limit (requests per minute per user)
CLEANUP_RATE_LIMIT="5"

# Security Configuration
ENABLE_SECURITY_HEADERS="true"
ENABLE_CSRF_PROTECTION="true"
# Enable EXIF data stripping from uploaded images
STRIP_EXIF_DATA="true"